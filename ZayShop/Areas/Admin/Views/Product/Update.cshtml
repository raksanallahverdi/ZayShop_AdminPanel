@using ZayShop.Areas.Admin.Models.Product
@model ProductUpdateVM

<form method="post" asp-action="update" asp-controller="product">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" placeholder="Enter Category Name" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Size"></label>
        <input asp-for="Size" class="form-control" placeholder="Enter Category Name" />
        <span asp-validation-for="Size" class="text-danger"></span>
    </div>
    <div class="form-group">
        <img src="~/assets/img/@Model.PhotoName" />
        <label asp-for="Photo"></label>
        <input asp-for="Photo" class="form-control" placeholder="Enter PhotoUrl" />
        <span asp-validation-for="Photo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" placeholder="Enter Category Name" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CategoryId"></label>
        <select class="form-select" asp-for="CategoryId" asp-items="Model.Categories"></select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
    <a class="btn btn-primary" asp-action="Index" asp-controller="product">Cancel</a>
</form>