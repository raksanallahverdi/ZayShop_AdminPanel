@using ZayShop.Areas.Admin.Models.Slider
@model SliderIndexVM

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800"> Sliders</h1>
    <a class="btn btn-primary" asp-action="create" asp-controller="slider">Create</a>
</div>

<table class="table table-light">
    <thead>
        <tr>
            <th scope="col">Product</th>
            <th scope="col">Name</th>
            <th scope="col">Size</th>
            <th scope="col">Price</th>
            <th scope="col">Created at</th>
            <th scope="col">Modified at</th>
            <th scope="col" class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Product in Model.Sliders)
        {
            <tr>
                <td class="w-25 h-25"><img class="object-fit-cover border rounded h-25 w-100"  src="@Product.PhotoPath" alt="Product" /></td>
                <td>@Product.Title</td>
                <td>@Product.Subtitle</td>
                <td>@Product.Description</td>
                <td>@Product.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@Product.ModifiedAt?.ToString("dd/MM/yyyy HH:mm")</td>
                <td class="text-center d-flex justify-content-center">
                    <a class="btn btn-secondary mx-2" asp-action="update" asp-controller="slider" asp-route-id="@Product.Id">✏️</a>
                    <form method="post" asp-action="delete" asp-controller="slider" asp-route-id="@Product.Id">
                        <button type="submit" class="btn btn-danger">X</button>
                    </form>
                </td>

            </tr>
        }
    </tbody>
</table>